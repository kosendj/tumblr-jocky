html, body
  background-color #2C4762
  width 100%
  height 100%
  margin 0
  padding 0

  article
    width 100%
    height 100%

    .post
      width 100%
      height 100%

      .photo, .img
        width 100%
        height 100%
        background-size contain
        background-repeat no-repeat
        background-position center

      .text, .quote
        width 100%
        height 100%

      .text .container, .quote .container
        background-color #fff
        color #808080
        font-size xx-large
        margin-left 25px
        margin-right 25px

    .wait, .done, .next
      display none

    .current
      display block

  .notify
    display none
    position fixed
    right 5%
    top 5%
    font-size large
    background-color rgba(0, 0, 0, 0.6)
    color #eee
    padding 10px

  .controller
    background-color rgba(0, 0, 0, 0.6)
    position fixed
    bottom 5%
    right 5%
    padding 5px

    img
      margin 5px

      &:active
        background-color rgba(233, 233, 233, 0.8)

  .setting
    position fixed
    top 5%
    left 5%
    margin 0 auto
    color #eee
    padding 10px
    background-color rgba(0, 0, 0, 0.6)

    ul
      list-style-type none

  .postInfo
    position fixed
    left 5%
    top 5%
    color #fff
    background-color rgba(0, 0, 0, 0.6)
